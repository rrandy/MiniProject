<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.m2dl.miniproject.mini_projetandroid" >

    <!-- Pour obtenir la géolocalisation -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Pour permettre de modifier les fichiers et métadonnées des images -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:logo="@drawable/ic_launcher"
        >
        <activity
            android:name=".controller.ActivityValidate"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".controller.ActivityName"
            android:label="@string/title_activity_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.ActivityPhoto"
            android:label="@string/title_activity_photo" >
        </activity>
        <activity
            android:name=".controller.ActivityMainMenu"
            android:label="@string/title_activity_main_list_menu" >
        </activity>
        <activity
            android:name=".controller.ActivityComment"
            android:label="@string/title_activity_activity_comment" >
        </activity>
        <activity
            android:name=".controller.ActivityInterestPoint"
            android:label="@string/title_activity_activity_interest_point" >
        </activity>
        <activity
            android:name=".controller.ActivityDetermining"
            android:label="@string/title_activity_activity_determining" >
        </activity>
    </application>

</manifest>
